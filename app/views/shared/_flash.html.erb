<% if flash[:notice] %>
  <p class="bg-blue-100 text-blue-800 px-4 py-2 rounded-md"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p class="bg-red-100 text-red-800 px-4 py-2 rounded-md"><%= flash[:alert] %></p>
<% end %>
<% if flash[:error] %>
  <p class="bg-red-800 text-black px-4 py-2 rounded-md"><%= flash[:error] %></p>
<% end %>
<% if flash[:success] %>
  <p class="bg-green-100 text-black px-4 py-2 rounded-md"><%= flash[:success] %></p>
<% end %>
