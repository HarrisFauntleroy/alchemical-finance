<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd" } do %>
    <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4">
        <% if local_assigns[:modal_title] %>
          <div class="font-bold text-xl mb-2 text-gray-800"><%= modal_title %></div>
        <% end %>
        <% if local_assigns[:modal_description] %>
          <p class="text-gray-700 text-base mb-4">
            <%= modal_description %>
          </p>
        <% end %>
        <div class="border-t border-gray-200 pt-2">
          <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full px-3">
              <%= render modal_content %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<style>
  #modal {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2;
    width: 400px;
    word-break: break-word;
    border-radius: 6px;
    background: #bad5ff;
  }
</style>
