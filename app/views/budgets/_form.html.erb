<%= form_with(model: @budget, local: true, html: { id: 'new_budget', class: 'space-y-4' }) do |f| %>
  <% if @budget.errors.any? %>
    <div
      class="
        bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4
      "
      role="alert"
    >
      <strong class="font-bold">Error(s):</strong>
      <ul>
        <% @budget.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-4">
    <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :name,
                 autofocus: true,
                 class:
                   "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-4">
    <%= f.label :amount, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.number_field :amount,
                   step: 0.01,
                   class:
                     "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-4">
    <%= f.label :category, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :category,
                 autofocus: true,
                 class:
                   "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-4">
    <%= f.label :currency, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :currency,
                 autofocus: true,
                 class:
                   "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-4">
    <%= f.label :frequency, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.select :frequency,
             options_for_select(
               [
                 %w[Daily daily],
                 %w[Weekly weekly],
                 %w[Fortnightly fortnightly],
                 %w[Monthly monthly],
                 %w[Quarterly quarterly],
                 %w[Annually annually],
               ],
               selected: @budget.frequency,
             ),
             {},
             class:
               "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mt-8">
    <%= f.submit "Save Budget",
             class:
               "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
