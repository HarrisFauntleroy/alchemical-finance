<div class="container mx-auto mt-4">
  <h1 class="text-2xl font-semibold">Transactions</h1>
  <div class="flex gap-4 mt-4">
    <span><%= link_to "New Account", new_account_path, class: "hover:text-blue-400" %></span>
  </div>

  <table class="table-auto mt-4">
    <thead>
      <tr>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Balance</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td class="border px-4 py-2"><%= account.name %></td>
          <td class="border px-4 py-2"><%= number_to_currency(account.balance) %></td>
          <td class="border px-4 py-2">
            <%= link_to "Show", account, class: "hover:text-blue-400" %>
            <%= link_to "Edit", edit_account_path(account), class: "hover:text-blue-400" %>
            <%= link_to "Delete",
            account,
            method: :delete,
            data: {
              confirm: "Are you sure?",
            },
            class: "hover:text-red-400" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
